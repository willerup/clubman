
<h1>Students</h1>

<% if is_admin? %>
<%= link_to 'New Student', new_student_path %>
<% end %>

<p>
  <b>Selected:</b>
  <a href="#" id="CreateEmail">Create Email</a> -
  <a href="#" id="CreatePairings">Create Pairings</a>
</p>

<div class="GroupLegend">
  <% @groups.each do |group| %>
      <input type="checkbox" class="GroupSelect" data-group-id="<%= group.id %>" <%= @selected_groups.include?(group) ? "checked='checked'" : '' %> />
      <%= render :partial => 'groups/group', :locals => { :group => group } %>
  <% end %>  
</div>

<h2>Active Students</h2>
<%= render(:partial => 'students', :locals => {:students => @active_students, :active => true}) %>
<p>Count: <span id='count'><%= @active_students.size %></span></p>

