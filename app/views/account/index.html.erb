
<h2>Accounts</h2>
<table>
	<tr>
		<th>Account</th>
		<th>Type</th>
		<th>Family</th>
		<th>Balance</th>
	</tr>	
	<% @accounts.each do |account| %>
	<tr>
		<td><%= account.name %></td>
		<td><%= account.account_type %></td>
		<td><%= account.family.nil? ? '-' : account.family.name %></td>
		<td><%= account.total %></td>
	</tr>
	<% end %>
</table>
