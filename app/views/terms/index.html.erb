<h2>Current term</h2>

<%= link_to current_club.term.name, current_club.term %>


<h2>All Terms</h2>
<table class="TermList">
  <tr>
	<th>Current</th>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @terms.each do |term| %>
  <tr data-term-id="<%=term.id%>" class="<%= term.current ? 'selected' : '' %>">
		<td>
			<span class="selection"> </span>
			</td>
    <td><%= term.name %></td>
    <td><%= link_to 'Edit', edit_term_path(term) %></td>
    <td><%= link_to 'Destroy', term, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Term', new_term_path %>
