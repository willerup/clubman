<h1>Listing users</h1>

<table id="UserList" class="tablesorter">
  <thead>
  <tr>
    <th>Coach</th>
    <th>Family</th>
    <th>Login</th>
    <th>Name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Students</th>
    <th>Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td class="center"><%= user.coach ? "x" : "" %></td>
        <td><%= user.family ? user.family.name : "-" %></td>
        <td><%= user.login %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.students.map {|s| s.firstname}.join(", ") %></td>
        <td>
          <%= link_to 'Show', user %>
          <%= link_to 'Edit', edit_user_path(user) %>
          <%= link_to 'X', user, :confirm => 'Are you sure?', :method => :delete %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<br/>

<%= link_to 'New User', new_user_path %>
